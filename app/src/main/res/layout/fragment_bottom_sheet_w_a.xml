<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailseller.BottomSheetWAFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_separator_bottom_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/title_choose_image_provider" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Yeay kamu mendapatpakn harga yang sesuai"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHargaTawaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Hubungi Pembeli melalui whatsapp untuk negosiasi lebih detailnya"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvHargaTawaran"
            >

        </View>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_margin="4dp"
            app:cardElevation="4dp"
            android:id="@+id/btn_product"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/spacer">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:fitsSystemWindows="true"
                >

                <TextView
                    android:id="@+id/tv_product_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Product Match"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:layout_marginTop="16dp"
                    android:id="@+id/img_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/default_rv"
                    android:fitsSystemWindows="true"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_match"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@string/title_choose_image_provider" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Nama Buyer"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_profile"
                    app:layout_constraintTop_toTopOf="@id/img_profile" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/kota"
                    android:textColor="@color/abu_muda_dua"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_profile"
                    app:layout_constraintStart_toEndOf="@+id/img_profile"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />
                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/img_product"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/default_rv"
                    android:fitsSystemWindows="true"
                    app:layout_constraintTop_toBottomOf="@id/img_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@string/title_choose_image_provider" />

                <TextView
                    android:id="@+id/tv_name_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/nama_produk"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_product"
                    app:layout_constraintTop_toTopOf="@id/img_product" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Rp 100.000"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_product"
                    app:layout_constraintStart_toEndOf="@+id/img_product"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_product" />

                <TextView
                    android:id="@+id/tv_ditawar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Ditawar Rp 100.000"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toEndOf="@+id/img_product"
                    app:layout_constraintTop_toBottomOf="@id/tv_price"
                    tools:layout_editor_absoluteX="80dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_kirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableEnd="@drawable/ic_whatsapp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="28dp"
            android:paddingVertical="8dp"
            android:text="Hubungi"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            app:backgroundTint="@color/hijau"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_product" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_kirim"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

        </Space>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>