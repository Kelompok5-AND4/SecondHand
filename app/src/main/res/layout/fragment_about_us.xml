<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradasi_biru"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_background"
            android:src="@drawable/bg_splash"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="109dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/logo" />


        <ImageView
            android:id="@+id/iv_white_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/top_menu_separator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <ImageView
            android:id="@+id/iv_bg_desc"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_rounded_birusatu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_white_bg"/>

        <TextView
            android:id="@+id/tv_desc"
            android:text="CuanCuan merupakan tempat Jual-Beli dan Lelang barang secara online. Platform ini membuka dan menyediakan berbagai jenis kategori kebutuhan anda"
            android:layout_width="0dp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_desc"
            app:layout_constraintTop_toTopOf="@id/iv_bg_desc"
            app:layout_constraintStart_toEndOf="@id/iv_sabrina"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg_desc"/>

        <ImageView
            android:id="@+id/iv_sabrina"
            android:layout_width="184dp"
            android:layout_height="289dp"
            android:layout_marginStart="-5dp"
            android:layout_marginBottom="-35dp"
            android:scaleType="fitStart"
            android:src="@drawable/cuan_mascot_empat"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg_desc"
            app:layout_constraintEnd_toStartOf="@id/tv_desc"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_bg_dokumentasi"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_rounded_birusatu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bg_desc"/>

        <TextView
            android:text="Baca Dokumentasi Mengenai Cuan-Cuan"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_bg_dokumentasi"
            app:layout_constraintEnd_toStartOf="@id/ic_extend"
            app:layout_constraintTop_toTopOf="@id/iv_bg_dokumentasi"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg_dokumentasi"/>

        <ImageView
            android:id="@+id/ic_extend"
            android:layout_width="55dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_extend"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg_dokumentasi"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_dokumentasi"
            app:layout_constraintTop_toTopOf="@id/iv_bg_dokumentasi" />

        <TextView
            android:id="@+id/tv_team"
            android:text="Meet Our Amazing Team :"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/biru_tua"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bg_dokumentasi"/>

        <!--Team Member Pertama-->

        <ImageView
            android:id="@+id/iv_pertama"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/pertama"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_kedua"
            app:layout_constraintTop_toBottomOf="@id/tv_team"/>

        <TextView
            android:id="@+id/nama_satu"
            android:text="M. Khoirul Anwar"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/biru_tua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_pertama"
            app:layout_constraintEnd_toEndOf="@id/iv_pertama"
            app:layout_constraintTop_toBottomOf="@id/iv_pertama"/>

        <TextView
            android:id="@+id/desc_satu"
            android:text="Scrum Master"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/biru_tua"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_pertama"
            app:layout_constraintEnd_toEndOf="@id/iv_pertama"
            app:layout_constraintTop_toBottomOf="@id/nama_satu"/>

        <ImageView
            android:id="@+id/linkedin_satu"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_linkedin"
            app:layout_constraintStart_toStartOf="@id/iv_pertama"
            app:layout_constraintTop_toBottomOf="@id/desc_satu"/>


        <!--Team member kedua-->
        <ImageView
            android:id="@+id/iv_kedua"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/kedua"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_pertama"
            app:layout_constraintTop_toBottomOf="@id/tv_team"/>

        <TextView
            android:id="@+id/nama_dua"
            android:text="Maulida Inayatul R."
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/biru_tua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_kedua"
            app:layout_constraintEnd_toEndOf="@id/iv_kedua"
            app:layout_constraintTop_toBottomOf="@id/iv_kedua"/>

        <TextView
            android:id="@+id/desc_dua"
            android:text="Product Owner"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/biru_tua"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_kedua"
            app:layout_constraintEnd_toEndOf="@id/iv_kedua"
            app:layout_constraintTop_toBottomOf="@id/nama_dua"/>

        <ImageView
            android:id="@+id/linkedin_dua"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_linkedin"
            app:layout_constraintStart_toStartOf="@id/iv_kedua"
            app:layout_constraintTop_toBottomOf="@id/desc_dua"/>

        <!--Team Member Ketiga-->

        <ImageView
            android:id="@+id/iv_ketiga"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ketiga"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_keempat"
            app:layout_constraintTop_toBottomOf="@id/linkedin_satu"/>

        <TextView
            android:id="@+id/nama_tiga"
            android:text="M. Rizqi Fakhri K."
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/biru_tua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_ketiga"
            app:layout_constraintEnd_toEndOf="@id/iv_ketiga"
            app:layout_constraintTop_toBottomOf="@id/iv_ketiga"/>

        <TextView
            android:id="@+id/desc_ketiga"
            android:text="UI/UX Designer"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/biru_tua"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_ketiga"
            app:layout_constraintEnd_toEndOf="@id/iv_ketiga"
            app:layout_constraintTop_toBottomOf="@id/nama_tiga"/>

        <ImageView
            android:id="@+id/linkedin_tiga"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_linkedin"
            app:layout_constraintStart_toStartOf="@id/iv_ketiga"
            app:layout_constraintTop_toBottomOf="@id/desc_ketiga"/>


        <!--Team member kedua-->

        <ImageView
            android:id="@+id/iv_keempat"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/keempat"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_ketiga"
            app:layout_constraintTop_toBottomOf="@id/linkedin_dua"/>

        <TextView
            android:id="@+id/nama_empat"
            android:text="Afifuddin"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/biru_tua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_keempat"
            app:layout_constraintEnd_toEndOf="@id/iv_keempat"
            app:layout_constraintTop_toBottomOf="@id/iv_keempat"/>

        <TextView
            android:id="@+id/desc_empat"
            android:text="Android Dev"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/biru_tua"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_keempat"
            app:layout_constraintEnd_toEndOf="@id/iv_keempat"
            app:layout_constraintTop_toBottomOf="@id/nama_empat"/>

        <ImageView
            android:id="@+id/linkedin_empat"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_linkedin"
            android:layout_marginBottom="90dp"
            app:layout_constraintStart_toStartOf="@id/iv_keempat"
            app:layout_constraintTop_toBottomOf="@id/desc_empat"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>