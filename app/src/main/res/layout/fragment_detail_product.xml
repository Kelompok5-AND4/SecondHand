<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_biru_gradasi_satu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailproduct.DetailProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foto_produk"
                android:layout_width="match_parent"
                android:layout_height="394dp"
                android:contentDescription="@string/foto_produk"
                android:scaleType="centerCrop"
                android:src="@drawable/default_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bg_harga"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/bg_rounded_birusatu"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/foto_produk" />

            <TextView
                android:id="@+id/tv_nama_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/nama_produk"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/bg_harga"
                app:layout_constraintTop_toTopOf="@id/bg_harga" />

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/harga"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/tv_nama_product"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_product" />


            <ImageView
                android:id="@+id/bg_detail_toko"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_birusatu"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_harga" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="16dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="@id/bg_detail_toko"
                app:layout_constraintTop_toTopOf="@id/bg_detail_toko"
                app:layout_constraintBottom_toBottomOf="@id/bg_detail_toko">

                <ImageView
                    android:id="@+id/iv_foto_profile"
                    android:background="@drawable/default_detail"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="centerCrop"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_nama_penjual"
                android:text="@string/nama_penjual"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/iv_lokasi"
                app:layout_constraintStart_toEndOf="@id/cv_photo"
                app:layout_constraintTop_toTopOf="@id/cv_photo"/>

            <ImageView
                android:id="@+id/iv_lokasi"
                android:background="@drawable/ic_lokasi"
                android:backgroundTint="@color/abu_muda_dua"
                android:contentDescription="@string/lokasi"
                android:layout_width="12dp"
                android:layout_height="17dp"
                app:layout_constraintStart_toStartOf="@id/tv_nama_penjual"
                app:layout_constraintBottom_toBottomOf="@id/cv_photo"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_penjual"/>

            <TextView
                android:id="@+id/tv_lokasi"
                android:text="@string/kota"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_lokasi"
                app:layout_constraintBottom_toBottomOf="@id/iv_lokasi"
                app:layout_constraintStart_toEndOf="@id/iv_lokasi"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_deskripsi"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="125dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_detail_toko"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_deskripsi_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="18dp"
                        android:text="@string/deskripsi"/>

                    <TextView
                        android:id="@+id/tv_deskripsi"
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="18dp"
                        android:fontFamily="@font/poppins_regular"
                        android:justificationMode="inter_word"
                        android:text="@string/isi_deskripsi"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_title" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginTop="8dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/tv_deskripsi"
                        app:spanCount="3"
                        tools:layout_editor_absoluteX="26dp"
                        tools:listitem="@layout/detail_category_item" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@drawable/ic_baseline_keyboard_arrow_left"
                style="@style/Widget.AppCompat.ActionButton"
                app:iconTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_judul"
                android:text="@string/detail_product"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintEnd_toStartOf="@id/btn_menu"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@drawable/ic_titik_tiga"
                style="@style/Widget.AppCompat.ActionButton"
                app:iconTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_nego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/nego"
        android:textAllCaps="false"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/abu_muda_dua"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/abu_muda_dua"
        app:strokeWidth="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cornerRadius="24dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_diterima"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/hijau"
        android:visibility="gone"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_diterima"
                android:text="@string/diterima_text"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ditolak"
        android:visibility="gone"
        android:layout_marginBottom="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/merah"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_ditolak"
                android:text="@string/ditolak_text"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_menunggu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/abu_muda"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_menunggu"
                android:text="@string/menunggu_text"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>