<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.favorite.WishlistFragment">

    <ImageView
        android:id="@+id/bg_top"
        android:src="@drawable/ic_bc_top"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" >
    </ImageView>

    <ImageView
        android:id="@+id/btn_back"
        android:src="@drawable/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/bg_top"
        app:layout_constraintTop_toTopOf="@id/bg_top"
        app:layout_constraintBottom_toBottomOf="@id/bg_top"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wishlist"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="@id/bg_top"
        app:layout_constraintBottom_toBottomOf="@id/bg_top"
        app:layout_constraintTop_toTopOf="@id/bg_top"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wishlist"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/wishlist_item"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/bg_top"/>


</androidx.constraintlayout.widget.ConstraintLayout>